<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".view.MainDrvActivity">

    <!-- Google Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        tools:context=".view.MainDrvActivity" />

    <!-- Control Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

        <!-- Countdown Timer -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="30:00"
            android:textColor="@color/colorError"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Button Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:spacing="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:minWidth="120dp"
                android:text="Start Route"
                android:textColor="@color/primaryBlue"
                android:visibility="visible"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_play"
                app:iconSize="24dp"
                app:iconPadding="8dp"
                app:iconTint="@color/primaryBlue"
                app:strokeColor="@color/primaryBlue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRest"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:minWidth="120dp"
                android:text="Take Rest"
                android:textColor="@color/primaryBlue"
                android:visibility="gone"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_pause"
                app:iconSize="24dp"
                app:iconPadding="8dp"
                app:iconTint="@color/primaryBlue"
                app:strokeColor="@color/primaryBlue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:minWidth="120dp"
                android:text="Continue"
                android:textColor="@color/primaryBlue"
                android:visibility="gone"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_continue"
                app:iconSize="24dp"
                app:iconPadding="8dp"
                app:iconTint="@color/primaryBlue"
                app:strokeColor="@color/primaryBlue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:minWidth="120dp"
                android:text="End Route"
                android:textColor="@color/colorError"
                android:visibility="gone"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_stop"
                app:iconSize="24dp"
                app:iconPadding="8dp"
                app:iconTint="@color/colorError"
                app:strokeColor="@color/colorError" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>