<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/backgroundLight"
    tools:context=".view.RouteDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

    <!-- Google Map Fragment (70% height) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        tools:context=".view.RouteDetailsActivity" />
</FrameLayout>

    <!-- Bottom Panel (CardView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stops Timeline -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStopsTimeline"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clipToPadding="false"
                android:contentDescription="@string/stops_list_description"
                android:paddingVertical="8dp"
                tools:listitem="@layout/item_stop_timeline" />


            <!-- Countdown Timer -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:text="30:00"
                android:textColor="@color/colorError"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Button Group -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Start Route"
                android:visibility="visible"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart" />

            <LinearLayout
                android:id="@+id/controlGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRest"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Take Rest"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_pause" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinue"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Continue"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_continue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStop"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="End Route"
                    android:textColor="@color/colorError"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_stop"
                    app:iconTint="@color/colorError"
                    app:strokeColor="@color/colorError" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>