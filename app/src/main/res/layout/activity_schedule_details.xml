<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Trip Details"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="?attr/colorOnSurface" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Map (70%) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
                app:layout_constraintBottom_toTopOf="@id/bottomCard"/>
        </FrameLayout>

        <!-- Bottom Panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottomCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Route Points Timeline -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRPoints"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:clipToPadding="false"
                    android:contentDescription="List of route points"
                    android:paddingVertical="8dp"
                    tools:listitem="@layout/item_rpoint_timeline" />

                <!-- Countdown Timer -->
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center"
                    android:textColor="@color/colorError"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:text="30:00"/>

                <!-- Button Group -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStart"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    android:text="Start Route"/>

                <LinearLayout
                    android:id="@+id/controlGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRest"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_pause"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        android:text="Take Rest"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContinue"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_continue"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        android:text="Continue"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStop"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/colorError"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_stop"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconTint="@color/colorError"
                        app:strokeColor="@color/colorError"
                        android:text="End Route"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>