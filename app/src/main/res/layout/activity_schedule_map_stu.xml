<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".view.Student.ScheduleMapStuActivity">

    <!-- Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Bus Dropdown Selector (Top Left Overlay) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/busDropdownCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="top|start"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/lightGray"
            app:boxStrokeColor="@color/primaryBlue"
            app:boxStrokeWidth="1dp"
            app:endIconMode="dropdown_menu"
            app:startIconDrawable="@drawable/ic_bus"
            app:startIconTint="@color/primaryBlue">

        <AutoCompleteTextView
            android:id="@+id/dropdownBusSelector"
            style="@style/TextAppearance.Body.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownHeight="320dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="none"
            android:paddingHorizontal="12dp"
            android:popupBackground="@color/lightGray"
            android:textColor="@color/primaryBlue"
            android:textSize="16sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Sheet for Route Points -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheetRoutePoints"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="top"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp">

            <!-- Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bs_handle"
                android:backgroundTint="@color/lightGray" />

            <!-- Queue Section -->
            <LinearLayout
                android:id="@+id/queueSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_queue"
                        android:layout_marginEnd="6dp"
                        app:tint="@color/primaryBlue" />

                    <TextView
                    android:id="@+id/tvQueuePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap on stops to queue"
                    android:textColor="@color/primaryBlue"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                </LinearLayout>

                <!-- Queue Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQueueMeUp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/primaryBlue"
                    android:text="Queue Me Up!"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:icon="@drawable/ic_person_add"
                    app:iconTint="@color/white"
                    app:iconPadding="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelQueue"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Cancel Queue"
                    android:textColor="@color/colorError"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_close"
                    app:iconTint="@color/colorError"
                    app:strokeColor="@color/colorError" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <!-- Header for timeline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvRouteHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Route Timeline"
                    android:textColor="@color/darkGray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvScheduleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming"
                    android:textColor="@color/primaryBlue"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRoutePoints"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rpoint_timeline_stu" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>