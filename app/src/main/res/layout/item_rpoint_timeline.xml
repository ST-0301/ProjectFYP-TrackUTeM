<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Route Point Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/indicatorCard"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/primaryBlue"
        app:strokeWidth="2dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/tvRPointName">

        <ImageView
            android:id="@+id/rpointIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location"
            app:tint="@color/primaryBlue" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Route Point Name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRPointName"
        style="@style/TextAppearance.Body.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="Route Point: %1$s"
        android:lineSpacingExtra="4dp"
        android:text="Stop Name"
        app:layout_constraintStart_toEndOf="@id/indicatorCard"
        app:layout_constraintTop_toTopOf="@id/indicatorCard"
        app:layout_constraintEnd_toStartOf="@id/btnArrival"
        app:lineHeight="24sp" />

    <!-- Expected Departure Time -->
    <TextView
        android:id="@+id/tvPlanTime"
        style="@style/TextAppearance.Body.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="08:00"
        app:layout_constraintStart_toEndOf="@id/indicatorCard"
        app:layout_constraintTop_toBottomOf="@id/tvRPointName"
        app:layout_constraintBottom_toTopOf="@+id/barrier"
        android:layout_marginTop="2dp"/>

    <!-- Lateness Indicator -->
    <TextView
        android:id="@+id/tvLateness"
        style="@style/TextAppearance.Body.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="+12 min"
        android:textColor="@color/colorError"
        app:layout_constraintStart_toEndOf="@id/tvPlanTime"
        app:layout_constraintTop_toTopOf="@+id/tvPlanTime"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlanTime"/>

    <!-- Barrier to handle dynamic content -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvRPointName,tvPlanTime,tvLateness"
        app:layout_constraintTop_toBottomOf="@id/tvPlanTime"/>

    <!-- Arrival Button -->
    <Button
        android:id="@+id/btnArrival"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrived"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRPointName"
        app:layout_constraintBottom_toBottomOf="@id/tvRPointName"
        android:layout_marginEnd="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorOutlineVariant"
        android:alpha="0.2"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintStart_toStartOf="@id/tvRPointName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>