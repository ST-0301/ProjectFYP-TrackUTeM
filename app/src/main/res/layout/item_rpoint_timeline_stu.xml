<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="12dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_location"
        app:tint="@color/primaryBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Route Point Name -->
    <TextView
        android:id="@+id/tvRPointName"
        style="@style/TextAppearance.Body.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Stop Name"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivStatus"
        app:layout_constraintEnd_toStartOf="@id/timeLayout"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Planned Time -->
        <TextView
            android:id="@+id/tvPlanTime"
            style="@style/TextAppearance.Body.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="08:05"/>

        <!-- Lateness Indicator -->
        <TextView
            android:id="@+id/tvLateness"
            style="@style/TextAppearance.Body.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/status_cancelled_delayed"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="(+5 min)"
            tools:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>