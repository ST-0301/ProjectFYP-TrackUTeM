<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#EEF3FA"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#DCE4F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- From Time -->
        <TextView
            android:id="@+id/tvPlanTimeFrom"
            style="@style/TextAppearance.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!-- From RPoint Name -->
        <TextView
            android:id="@+id/tvFromRPointName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="From Location Name"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvPlanTimeFrom"
            app:layout_constraintStart_toStartOf="@id/tvPlanTimeFrom"
            app:layout_constraintEnd_toStartOf="@id/tvDuration"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"/>

        <!-- Divider line between times -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toEndOf="@id/tvPlanTimeFrom"
            app:layout_constraintEnd_toStartOf="@id/tvPlanTimeTo"
            app:layout_constraintTop_toTopOf="@id/tvPlanTimeFrom"
            app:layout_constraintBottom_toBottomOf="@id/tvPlanTimeFrom"
            android:layout_marginHorizontal="8dp"/>

        <!-- Duration text below divider -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h 30m"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/divider"
            app:layout_constraintEnd_toEndOf="@id/divider"/>

        <!-- To Time -->
        <TextView
            android:id="@+id/tvPlanTimeTo"
            style="@style/TextAppearance.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!-- To RPoint Name -->
        <TextView
            android:id="@+id/tvToRPointName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="To Location Name"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="end"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvPlanTimeTo"
            app:layout_constraintStart_toEndOf="@id/tvDuration"
            app:layout_constraintEnd_toEndOf="@id/tvPlanTimeTo"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"/>

        <!-- Route Info -->
        <TextView
            android:id="@+id/tvRouteInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Route Name (In-Campus)"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvFromRPointName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvBusCount"
            app:layout_constraintBottom_toBottomOf="@id/tvBusCount"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"/>

        <!-- Bus Count -->
        <TextView
            android:id="@+id/tvBusCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2sp"
            android:text="2/3 buses\navailable"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFromRPointName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>