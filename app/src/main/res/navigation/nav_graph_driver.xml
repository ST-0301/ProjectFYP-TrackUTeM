    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.trackutem.view.Driver.HomeDrvFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home_drv" />

    <fragment
        android:id="@+id/navigation_trip"
        android:name="com.example.trackutem.view.Driver.TripsFragment"
