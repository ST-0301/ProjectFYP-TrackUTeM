<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="BottomNavLabelActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item> <!-- Optional for modern look -->
    </style>

    <style name="BottomNavLabelInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item> <!-- Optional for modern look -->
        <item name="android:alpha">0.6</item> <!-- Subtle inactive state -->
    </style>

    <style name="Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ModernBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
</resources>