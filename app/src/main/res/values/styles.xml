<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="BottomNavLabelActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomNavLabelInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/lightGray</item>
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="LoadingProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:indeterminateTint">@color/primaryBlue</item>
    </style>



    <style name="TextAppearance.Title.Large" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Body.Large" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Body.Medium" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Body.Secondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Chip.Status" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>