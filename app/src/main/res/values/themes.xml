<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackUTeM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorSecondary">@color/secondaryGreen</item>
        <item name="colorTertiary">@color/tertiaryOrange</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Background Colors -->
        <item name="colorSurface">@color/lightGray</item>
        <item name="colorSurfaceVariant">@color/darkGray</item>

        <!-- Error Color -->
        <item name="colorError">@color/colorError</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/poppins_font</item>
        <item name="android:fontFamily">@font/poppins_font</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>